<section>
	@if (@deck == null || deck.Count() == 0)
	{
		<p class="w-100 text-center"><em>No cards in deck...</em></p>
	}
	else
	{
		@foreach (MinimalAPI.Models.Card card in deck)
		{
			<DeckCard card="card" OnNameClicked="removeCard" OnNumberClicked="addAnother"></DeckCard>
		}
	}
</section>

@code {
	[Parameter]
	public IEnumerable<MinimalAPI.Models.Card>? deck { get; set; }
	[Parameter]
	public EventCallback<MinimalAPI.Models.Card> OnNameClicked { get; set; }
	[Parameter]
	public EventCallback<MinimalAPI.Models.Card> OnNumberClicked { get; set; }
	private async void removeCard(MinimalAPI.Models.Card card)
	{
		await OnNameClicked.InvokeAsync(card);
	}

	private async void addAnother(MinimalAPI.Models.Card card)
	{
		await OnNumberClicked.InvokeAsync(card);
	}
}